<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- اسم المستخدم -->
        <TextView
            android:id="@+id/homeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مرحبًا، المستخدم"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- اختيار نوع الوقود -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر نوع الوقود:" />

        <Spinner
            android:id="@+id/hometype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- إدخال الكمية يدويًا -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أدخل الكمية المطلوبة (لتر):" />

        <EditText
            android:id="@+id/et_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="أدخل الكمية"
            android:inputType="number"
            android:background="#f1f1f1"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- عرض السعر المحسوب -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعر:" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="#f1f1f1"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- إدخال الموقع -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موقعك:" />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اضغط على زر تحديد الموقع"
            android:inputType="text"
            android:focusable="false"
            android:background="#f1f1f1"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- زر تحديد الموقع -->
        <Button
            android:id="@+id/getBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تحديد الموقع"
            android:layout_marginBottom="16dp" />

        <!-- زر تنفيذ الطلب -->
        <Button
            android:id="@+id/orderBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تنفيذ الطلب"
            android:background="@color/design_default_color_primary"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
